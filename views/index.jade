extends layout

block content
  div.container
    div.row 
      h1= title
      p.small Welcome to #{title}
    hr
    div.row
      p#directions
    hr
    div.row
      p#leaderboardtitle Leaderboard
      p#leaderboard 
    hr
    div.row
      button#start-game-btn.btn.btn-primary.btn-lg.col-xs-offset-1(type="button") Start Game
    div.row
      p#game-info
      p#timer-container    
    canvas#drawing(width="800", height="500").canvas-btns
    div.btn-group
      button#clear-btn.btn(type="button")
        b Clear     
      button.btn.color-btn(type="button", data-color="black") Black    
      button.btn.color-btn(type="button", data-color="blue") Blue   
      button.btn.color-btn(type="button", data-color="red") Red     
      button.btn.color-btn(type="button", data-color="orange") Orange     
      button.btn.color-btn(type="button", data-color="green") Green   
      select#width-select(name="Select width of cursor")
        option(value="2") 2px        
        option(value="5") 5px        
        option(value="10") 10px      
        option(value="25") 25px  
  .chat-container
    br
    hr
    |         
    h2 Chatroom
    |         
    #feeddiv.scroll
      p#chat-feed
    |         
    input#new-message
    button#send-message(type="button") Send
